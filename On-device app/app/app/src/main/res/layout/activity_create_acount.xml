<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".CreateAcountActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/appname_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group H"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal" />


    <EditText
        android:id="@+id/username_create"
        android:layout_width="334dp"
        android:layout_height="54dp"
        android:layout_marginTop="120dp"
        android:drawableStart="@drawable/user_shape"
        android:hint="Username"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/login_round"
        android:drawablePadding="12dp"
        android:minHeight="48dp"
        android:textColor="@color/white_40"
        android:textColorHint="@color/white_70"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appname_create" />

    <EditText
        android:id="@+id/password_create"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/lock_shape"
        android:hint="password"
        android:background="@drawable/login_round"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:minHeight="48dp"
        android:textColorHint="@color/white_70"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_create" />

    <Button
        android:id="@+id/loginBtm_create"
        android:layout_width="255dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_btn"
        android:text="create account"
        android:textColor="@color/white_70"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_create" />

    <Button
        android:id="@+id/register_Btm_create"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/register_btn"
        android:text="log in"
        android:textColor="@color/blue"
        app:layout_constraintLeft_toRightOf="@id/already_account_create"
        app:layout_constraintTop_toBottomOf="@id/loginBtm_create" />

    <TextView
        android:id="@+id/already_account_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Already have an account?"
        android:textColor="@color/white_70"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginBtm_create" />




    />


</androidx.constraintlayout.widget.ConstraintLayout>